<mj-attributes>
  {{!-- Primary button style --}}
  <mj-class name="btn-primary"
            background-color="{{default org.branding.primaryColor '#2563eb'}}"
            color="#ffffff"
            font-weight="600"
            border-radius="6px"
            padding="12px 24px" />

  {{!-- Secondary button style --}}
  <mj-class name="btn-secondary"
            background-color="#f3f4f6"
            color="#374151"
            font-weight="600"
            border-radius="6px"
            padding="12px 24px" />

  {{!-- Heading styles --}}
  <mj-class name="heading-lg"
            font-size="24px"
            font-weight="700"
            color="#111827"
            line-height="1.3" />

  <mj-class name="heading-md"
            font-size="20px"
            font-weight="600"
            color="#111827"
            line-height="1.4" />

  <mj-class name="heading-sm"
            font-size="16px"
            font-weight="600"
            color="#374151"
            line-height="1.5" />

  {{!-- Text styles --}}
  <mj-class name="text-body"
            font-size="16px"
            color="#374151"
            line-height="1.6" />

  <mj-class name="text-small"
            font-size="14px"
            color="#6b7280"
            line-height="1.5" />

  <mj-class name="text-muted"
            font-size="12px"
            color="#9ca3af"
            line-height="1.4" />

  {{!-- Card style --}}
  <mj-class name="card"
            background-color="#ffffff"
            border-radius="8px"
            padding="24px" />

  {{!-- Alert styles --}}
  <mj-class name="alert-warning"
            background-color="#fef3c7"
            border-left="4px solid #f59e0b"
            padding="16px" />

  <mj-class name="alert-danger"
            background-color="#fee2e2"
            border-left="4px solid #dc2626"
            padding="16px" />

  <mj-class name="alert-info"
            background-color="#dbeafe"
            border-left="4px solid #2563eb"
            padding="16px" />

  <mj-class name="alert-success"
            background-color="#dcfce7"
            border-left="4px solid #22c55e"
            padding="16px" />

  {{!-- Badge styles --}}
  <mj-class name="badge"
            font-size="12px"
            font-weight="600"
            padding="4px 8px"
            border-radius="4px" />

  {{!-- Divider style --}}
  <mj-class name="divider"
            border-color="#e5e7eb"
            border-width="1px"
            padding="16px 0" />
</mj-attributes>

<mj-font name="Inter" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />

<mj-all font-family="Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
