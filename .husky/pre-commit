#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for formatting and linting
npx lint-staged

# Run TypeScript type checking
echo "Running type check..."
npm run typecheck

# Security audit (warning only, doesn't block commit)
echo "Running security audit..."
npm audit --audit-level=critical || echo "Warning: Security vulnerabilities detected. Please review."
