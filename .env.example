# ===========================================
# Ethico Risk Intelligence Platform
# Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in the values

# Node Environment
NODE_ENV=development

# ===========================================
# Database (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://ethico:ethico_dev@localhost:5432/ethico_dev?schema=public

# ===========================================
# Redis Cache
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Elasticsearch
# ===========================================
ELASTICSEARCH_URL=http://localhost:9200

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ===========================================
# Application URLs
# ===========================================
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ===========================================
# Email (Mailhog for development)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@ethico.local

# ===========================================
# AI Services (Optional for scaffolding)
# ===========================================
# ANTHROPIC_API_KEY=your-api-key
# AI_MODEL=claude-3-opus-20240229

# ===========================================
# Azure Storage (Optional for scaffolding)
# ===========================================
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_CONTAINER_PREFIX=ethico
